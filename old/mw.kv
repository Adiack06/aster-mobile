WindowManger:
    Login:
    SecondWindow:


<Login>:
    name: "login"
    GridLayout:
        cols: 1
        GridLayout
            cols: 2
            Label:
                text: "username:"
            TextInput:
                id: username
                multiline: False
            Label:
                text: "password:"
            TextInput:
                id: password
                multiline: False
        Button:
            text: "Submit"
            on_release:
                app.root.current = "second" if password.text =="password" and username.text =="username" else "login"
                root.manager.transition.direction = "left"



<SecondWindow>:
    name: "second"

