<MyGrid>:
    calc: calc
    GridLayout:

        size: root.width-200, root.height
        pos: 100,0

        cols:1
        Label:
            id: calc
            text: ""
        GridLayout:
            cols:4
            size_hint=()
            Button:
                text:"7"
                on_release:calc.text += "7"
            Button:
                text:"8"
                on_release:calc.text += "8"
            Button:
                text:"9"
                on_release:calc.text += "9"
            Button:
                text:"+"
                on_release:calc.text += "+"

        GridLayout:
            cols:4
            Button:
                text:"4"
                on_release:calc.text += "4"
            Button:
                text:"5"
                on_release:calc.text += "5"
            Button:
                text:"6"
                on_release:calc.text += "6"
            Button:
                text:"-"
                on_release:calc.text += "-"
        GridLayout:
            cols:4
            Button:
                text:"1"
                on_release:calc.text += "1"
            Button:
                text:"2"
                on_release:calc.text += "2"
            Button:
                text:"3"
                on_release:calc.text += "3"
            Button:
                text:"*"
                on_release:calc.text += "*"
        GridLayout:
            cols:4
            Button:
                text:"remove"
                on_press:root.remove()
            Button:
                text:"equals"
                on_press:root.btn()
            Button:
                text:"0"
                on_release:calc.text += "0"
            Button:
                text:"/"
                on_release:calc.text += "/"

